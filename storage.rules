rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper to check for staff roles
    function isStaff() {
      return request.auth != null && 
             request.auth.token != null &&
             "email" in request.auth.token &&
             request.auth.token.email.matches('.*@proneosports.com'); 
    }

    // Rules for Player Media (Regular & Scouting)
    // Emergency Relaxation Level 2: Allow write if authenticated (ignoring UID match) to debug path/token issues.
    match /players/{uid}/{allPaths=**} {
      allow read: if true; 
      allow write: if request.auth != null;
    }

    match /scouting_players/{uid}/{allPaths=**} {
      allow read: if true; 
      allow write: if request.auth != null;
    }

    // FIX per user request: Generic scouting folder permission
    match /scouting/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Fallback or legacy paths
    match /player_videos/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == uid || isStaff());
    }

    // Rules for Contracts
    match /contracts/{allPaths=**} {
      allow read, write: if isStaff();
    }

    // Rules for User Profiles (Settings)
    match /profiles/{userEmail} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == userEmail;
    }

    // Default deny for anything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
