rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for Player Media
    match /players/{playerId}/{allPaths=**} {
      // Allow read/write if the user is authenticated as this player
      allow read, write: if isOwner(playerId);
      // Also allow admins (if needed, simplified here)
      // allow read, write: if request.auth.token.role == 'admin';
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
