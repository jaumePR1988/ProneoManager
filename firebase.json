{
    "firestore": {
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "target": "main",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    },
                    {
                        "key": "Pragma",
                        "value": "no-cache"
                    },
                    {
                        "key": "Expires",
                        "value": "0"
                    }
                ]
            }
        ]
    },
    "functions": [
        {
            "source": "functions",
            "runtime": "nodejs18",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ]
}